import java.util.*;
import java.io.*;

class Solution{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        for(int i=0;i<t;i++){
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            int x=0;
            int y=0;
        long sum=0;
        double mul=0;
        for(int d=1; d<=n;d++)
            {
                if(d==1)
            {
                mul=1;
            }
              if (d!=1){
                  a=0;
              } 
                
                x=a+b*(int)mul;
                sum=sum+x;
                System.out.print(sum+" ");
                mul=Math.pow(2, d);
            }
             System.out.println();
        }   
        in.close();    
    }
}
